<%= simple_form_for(current_user, 
  url: registration_path(current_user), 
  html: {method: :put}) do |f| %>
  <div class="row mt-5">
    <div class="col-6">
      <%= image_tag(current_user.avatar, class: "avatar-image img-fluid") if current_user.avatar.attached? %>
    </div>
    <div class="col-4 mt-5">
      <%= f.input_field :avatar, required: false, label: false %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-6">
      <%= f.input_field :full_name, label: false, class: "form-control", placeholder: "Your full name" %>
    </div>
    <div class="col-6">
      <div class="input-group mb-3">
        <span class="input-group-text">@</span>
        <%= f.input_field :username, label: false, class: "form-control", placeholder: "Your username", required: true, disabled: current_user.username.present? %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-group">
      <%= f.input_field :body, placeholder: "About you...", label: false, class: "form-control", required: false %>
    </div>
  </div>
  <div class="col-4 mt-2">
    <%= f.submit "Update Account", class: "btn btn-primary" %>
  </div>
<% end %>